# =====================================
# Django Configuration
# =====================================

# Secret key for Django (CHANGE IN PRODUCTION!)
SECRET_KEY=django-insecure-change-this-key-in-production-use-at-least-50-characters

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated list)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =====================================
# Database Configuration
# =====================================

# For development (SQLite)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# For production (PostgreSQL) - uncomment and configure:
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=legal_manager_db
# DB_USER=legal_user
# DB_PASSWORD=your_secure_password_here
# DB_HOST=localhost
# DB_PORT=5432

# =====================================
# Email Configuration
# =====================================

# Email backend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP settings (for production)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# =====================================
# Celery Configuration (Background Tasks)
# =====================================

# Redis for Celery (background tasks and caching)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# For Docker development:
# CELERY_BROKER_URL=redis://redis:6379/0
# CELERY_RESULT_BACKEND=redis://redis:6379/0

# =====================================
# LLM/AI Configuration
# =====================================

# OpenAI API Configuration
LLM_API_KEY=your-openai-api-key-here
LLM_API_ENDPOINT=https://api.openai.com/v1/chat/completions
LLM_MODEL=gpt-4o-mini

# Alternative: Anthropic Claude
# LLM_API_KEY=your-anthropic-api-key-here
# LLM_API_ENDPOINT=https://api.anthropic.com/v1/messages
# LLM_MODEL=claude-3-haiku-20240307

# Alternative: Azure OpenAI
# LLM_API_KEY=your-azure-openai-key
# LLM_API_ENDPOINT=https://your-resource.openai.azure.com/openai/deployments/your-deployment/chat/completions?api-version=2023-12-01-preview
# LLM_MODEL=gpt-4

# =====================================
# Security Settings
# =====================================

# Session security
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
CSRF_COOKIE_HTTPONLY=True

# For production (HTTPS), set these to True:
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# =====================================
# File Storage Configuration
# =====================================

# Local file storage (development)
MEDIA_ROOT=media/
STATIC_ROOT=staticfiles/

# AWS S3 Storage (production) - uncomment and configure:
# USE_S3=True
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=your-custom-domain.com

# =====================================
# Monitoring and Logging
# =====================================

# Sentry for error monitoring (optional)
# SENTRY_DSN=https://your-sentry-dsn-here

# Log level
LOG_LEVEL=INFO

# =====================================
# Feature Flags
# =====================================

# Enable/disable features
ENABLE_LLM_FEATURES=True
ENABLE_2FA=True
ENABLE_AUDIT_LOGGING=True

# =====================================
# Development Settings
# =====================================

# Django Debug Toolbar (development only)
ENABLE_DEBUG_TOOLBAR=True

# Django Extensions
ENABLE_EXTENSIONS=True

# =====================================
# Performance Settings
# =====================================

# Cache configuration
CACHE_BACKEND=redis
CACHE_LOCATION=redis://localhost:6379/1

# For Docker:
# CACHE_LOCATION=redis://redis:6379/1

# Session engine
SESSION_ENGINE=django.contrib.sessions.backends.cache

# =====================================
# Legal Document Processing
# =====================================

# Directory for legal documents
LEGAL_DOCUMENTS_DIR=legal_documents/

# Maximum file upload size (in MB)
MAX_UPLOAD_SIZE=50

# Allowed file types
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,png,jpg,jpeg

# =====================================
# Integration Settings
# =====================================

# Google Calendar API (optional)
# GOOGLE_CALENDAR_API_KEY=your-google-api-key
# GOOGLE_CALENDAR_CLIENT_ID=your-client-id

# DocuSign API (optional)
# DOCUSIGN_INTEGRATION_KEY=your-integration-key
# DOCUSIGN_USER_ID=your-user-id
# DOCUSIGN_ACCOUNT_ID=your-account-id

# =====================================
# Backup Configuration
# =====================================

# Backup directory
BACKUP_DIR=backups/

# Automatic backup schedule (in hours)
BACKUP_INTERVAL=24

# =====================================
# Timezone and Localization
# =====================================

# Timezone
TIME_ZONE=Europe/Tirane

# Language
LANGUAGE_CODE=sq

# =====================================
# API Rate Limiting
# =====================================

# API rate limits (requests per minute)
API_RATE_LIMIT=60
LOGIN_RATE_LIMIT=5

# =====================================
# Development URLs
# =====================================

# Frontend development server (if using separate frontend)
# FRONTEND_URL=http://localhost:3000

# API base URL
# API_BASE_URL=http://localhost:8000/api

# =====================================
# Production Deployment
# =====================================

# Domain name for production
# DOMAIN_NAME=your-domain.com

# SSL certificate paths
# SSL_CERT_PATH=/path/to/certificate.crt
# SSL_KEY_PATH=/path/to/private.key

# =====================================
# Environment Identifier
# =====================================

# Environment name (development, staging, production)
ENVIRONMENT=development

# =====================================
# Additional Notes
# =====================================

# 1. Copy this file to .env and fill in your actual values
# 2. Never commit the .env file to version control
# 3. Use strong, unique passwords in production
# 4. Enable HTTPS in production
# 5. Configure proper firewall rules
# 6. Set up regular database backups
# 7. Monitor your application logs
# 8. Update dependencies regularly for security
